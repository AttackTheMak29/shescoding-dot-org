<div class="resources-section container">
  <div class="row">
    <div class="resources-sidebar col-md-3">
      <ul>
        <li><%= link_to "Category 1", "" %></li>
        <li><%= link_to "Category 1", "" %></li>
        <li><%= link_to "Category 1", "", class: "selected" %></li>
        <li><%= link_to "Category 1", "" %></li>
        <li><%= link_to "Category 1", "" %></li>
        <li><%= link_to "Category 1", "" %></li>
        <li><%= link_to "Category 1", "" %></li>
        <li><%= link_to "Category 1", "" %></li>
      </ul>
    </div>
    <div class="resources-grid col-md-9">
      <% @resources.each do |resource| %>
        <div class="panel panel-default">
          <div class="panel-body">
            <div class="panel-header">
              <h4><%= resource.source %></h4>
              <h3><%= resource.title %></h3>
            </div>
            <div class="panel-preview">
              <div class="text">"<%= truncate(resource.description, length: 280) %></div>
              <%= link_to "Read More >>", resource, class: "next" %>
            </div>
            <div class="panel-tags">
              <ul>
                <li><%= link_to "Category 1", "" %></li>
                <li><%= link_to "Category 1", "" %></li>
                <li><%= link_to "Category 1", "" %></li>
              </ul>
            </div>
            <div class="panel-data">
              <div class="date"><%= format_date(resource.date) %></div>
              <div class="likes">
                <%= link_to "&#9825;".html_safe, "", class: "heart" %>
                <%= resource.likes || 0 %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
