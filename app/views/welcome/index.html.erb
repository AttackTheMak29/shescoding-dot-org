<%= render "layouts/navbar", page: "" %>

<div class="container front-page page">
    <div class="col-sm-12">
        <div class="row">
            <div class="ui-shecodes-mission text-center">
                <p>We are community driven.</p>
                <p>We educate and empower.</p>
                <p>We are closing the gender gap in tech.<p>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="ui-persona-row">
        <div class="col-sm-4 ui-persona-col">
            <%= link_to woman_path do %>
                <div class='ui-rectangle-box'>
                    <div class='ui-rectangle-content'>
                        <div class='ui-rectangle-content'>
                            <%= image_tag("Front-Page_She.png", class: "persona-img") %>
                        </div>
                    </div> 
                </div>               
            <% end %>
        </div>
        <div class="col-sm-4 ui-persona-col">
            <%= link_to supporter_path do %>
                <div class='ui-rectangle-box'>
                    <div class='ui-rectangle-content'>
                        <%= image_tag("Front-Page_Company.png", class: "persona-img") %>
                    </div>
                </div>
            <% end %>
        </div>
        <div class="col-sm-4 ui-persona-col">
            <%= link_to company_path do %>
                <div class='ui-rectangle-box ui-rectangle-company'>
                    <div class='ui-rectangle-content'>
                        <%= image_tag("Front-Page_Supporter.png", class: "persona-img") %>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>
