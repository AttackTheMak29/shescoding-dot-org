<h1 class="ui-guide-intro">Great! Let us help you. Check out these resources...</h1>

<% @guides.each_with_index do |guide| %>
<div class="container">
    <div class="row ui-guide-row">
        <div class="col-sm-3 col-sm-offset-1">
            <h3 class="ui-guide-title"><%= guide.title %></h3>
        </div>
        <div class="col-sm-6">
            <p class="ui-guide-description"><%= guide.description %></p>
        </div>
        <div class="col-sm-2">
          <%= image_tag('Heart-Red-Outlined.png') %>
        </div>
    </div>
</div>
<% end %>
